{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",  // Add this to enable JSX support
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]  // Matches your import aliases (e.g., '@/components/ui/card')
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["dom", "esnext"]  // Add these for React compatibility
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
